model App {
  id String @id
  name String
  createdAt DateTime @default(now())
}

model State {
  stateId String @id
  appId String
  name String
}

model Action {
  actionId String @id
  appId String
  name String
}

model Transition {
  transitionId Int @id @default(autoincrement())
  appId String
  stateId String
  actionId String
  nextStateId String
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}